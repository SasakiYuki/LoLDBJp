<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NavigationTitleText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="android:background">@color/colorBlack</item>
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>

    <style name="SquareCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="EditTextMainPrimary">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="SectionHeaderText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SimpleCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_small_half</item>
        <item name="android:layout_marginBottom">@dimen/space_small_half</item>
    </style>

    <style name="CustomDesignDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="CustomDesignDialog.Dark">
        <item name="android:backgroundDimAmount">0.88</item>
    </style>
</resources>
